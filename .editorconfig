# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
trim_trailing_whitespace = true

# TOML files (Cargo.toml, etc.)
[*.toml]
indent_size = 4
trim_trailing_whitespace = true

# Markdown files
[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

# SQL Logic Test files - 保持空格不被修剪
[*.test]
trim_trailing_whitespace = false
insert_final_newline = false

# YAML files
[*.{yml,yaml}]
indent_size = 2
trim_trailing_whitespace = true

# JSON files
[*.json]
indent_size = 2
trim_trailing_whitespace = true

# JavaScript/TypeScript files
[*.{js,ts}]
indent_size = 2
trim_trailing_whitespace = true
